{
	"config": {
		"t": {
			"alias": "test",
			"describe": "测试线路径",
			"type": "string"
		},
		"o": {
			"alias": "online",
			"describe": "正式线路径",
			"type": "string"
		},
		"a": {
			"alias": "all",
			"describe": "显示所有配置",
			"type": "boolean"	
		}
	},
