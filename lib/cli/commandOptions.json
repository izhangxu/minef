		"p": {
			"alias": "port",
			"describe": "改变监听端口（默认是8080）",
			"type": "string"
		},
		"o": {
			"alias": "open",
			"default": true,
			"describe": "服务器启动后打开浏览器",
			"type": "boolean"
		},
		"i": {
			"alias": "autoindex",
			"default": false,
