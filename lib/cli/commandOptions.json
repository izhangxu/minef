			"type": "boolean"
		},
		"s": {
			"alias": "silent",
			"default": false,
			"describe": "打印日志",
			"type": "boolean"
		}
	},
	"hosts": {
		"t": {
			"alias": "test",
			"describe": "切换到测试线",
			"type": "boolean"
		},
		"o": {
			"alias": "online",
			"describe": "切换到正式线",
			"type": "boolean"
		},
		"R": {
			"alias": "remove-group",
			"describe": "移除一组host",
			"type": "array"
		},
		"D": {
			"alias": "disable-group",
			"describe": "禁用一组host",
			"type": "array"
		},
		"A": {
			"alias": "active-group",
			"describe": "禁用一组host",
			"type": "array"
		},
		"r": {
			"alias": "remove",
			"describe": "移除一条host",
			"type": "array"
		},
		"d": {
			"alias": "disable",
			"describe": "禁用一条host",
			"type": "array"
		},
		"a": {
			"alias": "active",
			"describe": "激活一条host",
			"type": "array"
		},
		"s": {
			"alias": "set",
			"describe": "设置一条host",
			"type": "array"
		},
		"l": {
			"alias": "list",
			"describe": "显示设置的所有hosts",
			"type": "boolean"
		}
